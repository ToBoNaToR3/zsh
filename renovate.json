{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices"],
  "timezone": "Europe/Berlin",
  "schedule": ["before 6am"],
  "automerge": true,
  "packageRules": [
    {
      "description": "Disable auto-merge for major updates",
      "automerge": false,
      "matchUpdateTypes": ["major", "replacement"]
    },
    {
      "description": "Add renovate label to all updates by default",
      "matchManagers": ["*"],
      "addLabels": ["renovate"]
    },
    {
      "description": "Label major updates",
      "matchUpdateTypes": ["major"],
      "addLabels": ["major"]
    },
    {
      "description": "Label minor updates",
      "matchUpdateTypes": ["minor"],
      "addLabels": ["minor"]
    },
    {
      "description": "Label patch updates",
      "matchUpdateTypes": ["patch"],
      "addLabels": ["patch"]
    },
    {
      "groupName": "GitHub Actions",
      "matchManagers": ["github-actions"],
      "addLabels": ["ci"]
    },
    {
      "groupName": "Linters and formatters",
      "matchPackageNames": [
        "commitlint ",
        "hadolint/hadolint-action",
        "markdownlint-cli2",
        "prettier"
      ],
      "addLabels": ["linters"]
    },
    {
      "groupName": "Mise tools",
      "matchManagers": ["mise"],
      "addLabels": ["mise"]
    },
    {
      "groupName": "Docker digest pins",
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["pinDigest"],
      "pinDigests": true,
      "addLabels": ["docker"]
    },
    {
      "groupName": "Docker digest updates",
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["digest"],
      "pinDigests": true,
      "addLabels": ["docker"]
    },
    {
      "groupName": "GitHub Actions",
      "matchDatasources": ["github-actions"],
      "addLabels": ["ci"]
    },
    {
      "groupName": "node",
      "matchPackageNames": ["node"]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/^\\.github/workflows/[^/]+\\.ya?ml$/"],
      "matchStrings": [
        "npm install -g (?<depName>[a-z0-9-]+)@v?(?<currentValue>[0-9.]+)"
      ],
      "datasourceTemplate": "npm"
    }
  ]
}
