rules:
  scope-empty:
    - 2
    - never
  scope-enum:
    - 2
    - always
    - - ci
      - config
      - deps
      - docker
      - renovate
      - repo
      - scripts
      - zsh
  type-empty:
    - 2
    - never
  type-enum:
    - 2
    - always
    - - chore
      - config
      - doc
      - feat
      - fix
      - revert
